<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.petersmith.treasurehunt.StartActivity">

    <TextView
        android:id="@+id/enterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameEntry"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="150dp"
        android:text="Type Name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/nameEntry"
        style="@android:style/Widget.DeviceDefault.Light.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/enterName"
        android:layout_marginStart="37dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:text="Name" />

    <Button
        android:id="@+id/startButton"
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_alignTop="@+id/nameEntry"
        android:layout_toEndOf="@+id/nameEntry" />

    <Button
        android:id="@+id/ClearScoresButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:text="Clear Scores" />

</RelativeLayout>
