<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Where is it?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/QuestionText"
        android:layout_below="@+id/QuestionNum"
        android:layout_alignStart="@+id/QuestionNum" />

    <EditText
        android:id="@+id/answerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Answer"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/QuestionText"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/answerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/answerText"
        android:layout_centerHorizontal="true" />


    <TextView
        android:text="Interesting info about answer..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ExtraText"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/answerButton"
        android:layout_alignParentStart="true" />

</RelativeLayout>